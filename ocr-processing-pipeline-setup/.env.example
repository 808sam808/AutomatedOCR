# ──────────────────────────────────────────────────
#  OCR Pipeline — Environment Variables
#  Copy this file to .env and fill in your values
# ──────────────────────────────────────────────────

# REQUIRED: Your Groq API key (https://console.groq.com/keys)
GROQ_API_KEY=gsk_your_api_key_here

# Optional: Groq model for classification (default: llama-3.3-70b-versatile)
GROQ_MODEL=llama-3.3-70b-versatile

# Optional: Port for the web dashboard (default: 8080)
WEB_PORT=8080

# Optional: Seconds to wait for upload to stabilize (default: 3)
UPLOAD_STABLE_SECONDS=3
